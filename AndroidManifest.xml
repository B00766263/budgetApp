<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LastMonth"></activity>
        <activity android:name=".CurrentMonth" />
        <activity android:name=".LastWeek" />
        <activity android:name=".CurrentWeek" />
        <activity android:name=".ChooseMonthSpending" />
        <activity android:name=".ChooseWeekSpending" />
        <activity android:name=".ChooseTodaySpending" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Spending">
            <intent-filter>
                <action android:name="android.intent.action.spending" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Wastage">
            <intent-filter>
                <action android:name="android.intent.action.wastage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Statistics">
            <intent-filter>
                <action android:name="android.intent.action.statistics" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Household">
            <intent-filter>
                <action android:name="android.intent.action.household" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Planner">
            <intent-filter>
                <action android:name="android.intent.action.planner" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>